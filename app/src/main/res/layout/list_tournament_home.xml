<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/material_grey_700"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_tourney"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/poster_game1"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/star"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/rating_tourney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8.0"
                android:textSize="14dp"
                android:textColor="@color/grey"
                android:gravity="center_vertical"
                android:maxLines="2"/>
        </LinearLayout>

    <TextView
        android:id="@+id/judul_tourney"
        android:layout_marginTop="2dp"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14dp"
        android:textColor="@color/grey"
        android:gravity="center"
        android:textStyle="bold"
        android:maxLines="2"
        android:minLines="2"/>

        <TextView
            android:id="@+id/prize_tourney"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12dp"
            android:textColor="@color/grey"
            android:gravity="center"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/judul_game"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textStyle="italic"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tv_created_by"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="12dp"
            android:gravity="center"
            android:textStyle="italic"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/btn_detail"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat Detail..."
            android:textSize="10dp"
            android:textColor="@color/orange"
            android:gravity="end"
            android:maxLines="2"/>



    </LinearLayout>



</androidx.cardview.widget.CardView>