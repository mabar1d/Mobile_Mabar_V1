<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color_black"
    tools:context="com.circle.circle_games.signup.SignUpActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/et_username_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_circle" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_username_layout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/rounded_edit_text_grey"
        android:textColorHint="@color/text_grey"
        android:focusable="true"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:hintTextAppearance="@style/CircleHintTextApp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUsername"
            android:background="@drawable/rounded_edit_text_grey"
            android:textColorHint="@color/text_grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="12dp"
            android:inputType="text"
            android:textColor="@color/text_grey"
            android:hint="@string/tx_signup_username"
            android:textSize="16sp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_email_layout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/rounded_edit_text_grey"
        android:textColorHint="@color/text_grey"
        android:focusable="true"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_username_layout"
        app:hintTextAppearance="@style/CircleHintTextApp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:background="@drawable/rounded_edit_text_grey"
            android:textColorHint="@color/text_grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="12dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/text_grey"
            android:hint="@string/tx_signup_email"
            android:textSize="16sp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_password_layout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/rounded_edit_text_grey"
        android:textColorHint="@color/text_grey"
        android:focusable="true"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        app:endIconTint="@color/text_grey"
        app:endIconMode="password_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email_layout"
        app:hintTextAppearance="@style/CircleHintTextApp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:background="@drawable/rounded_edit_text_grey"
            android:textColorHint="@color/text_grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="12dp"
            android:inputType="textPassword"
            android:textColor="@color/text_grey"
            android:hint="@string/tx_signup_password"
            android:textSize="16sp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_re_password_layout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/rounded_edit_text_grey"
        android:textColorHint="@color/text_grey"
        android:focusable="true"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        app:endIconTint="@color/text_grey"
        app:endIconMode="password_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password_layout"
        app:hintTextAppearance="@style/CircleHintTextApp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etVerifPassword"
            android:background="@drawable/rounded_edit_text_grey"
            android:textColorHint="@color/text_grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="12dp"
            android:inputType="textPassword"
            android:textColor="@color/text_grey"
            android:hint="@string/tx_signup_re_password"
            android:textSize="16sp"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnSignup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/rounded_button_orange"
        android:textColor="@color/white"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_re_password_layout" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:text="Already have account?"
        android:textColor="@color/grey"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvLogin"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="33dp"
        android:textStyle="bold"
        android:text="Log in"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>