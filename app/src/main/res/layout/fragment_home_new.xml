<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color_blue"
    android:orientation="vertical"
    tools:context=".main.HomeFragmentNew">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Top Tournaments-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="400dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/material_grey_700"
                android:layout_marginBottom="20dp">

                <com.asura.library.views.PosterSlider
                    android:id="@+id/poster_slider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:defaultIndicator="circle"
                    app:hideIndicators="true"
                    app:imageSlideInterval="5000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:loopSlides="true" />


            </androidx.cardview.widget.CardView>

