<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/cs_dialog"
    android:background="@drawable/rounded_edit_text_grey"
    android:elevation="5dp"
    android:padding="25dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:maxWidth="60dp"
        android:maxHeight="60dp"
        android:src="@drawable/ic_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/material_grey_700"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:text="Switch Role"/>

    <TextView
        android:id="@+id/subTitle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:textAlignment="textStart"
        android:textColor="@color/material_grey_700"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btn_satu"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:text="Request as a?"/>

    <Button
        android:id="@+id/btn_satu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:text="Host"
        android:background="@drawable/rounded_button_green"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white_fab"
        app:layout_constraintEnd_toStartOf="@+id/btn_dua"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_dua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="18dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_button_green"
        android:text="Team Lead"
        android:textColor="@color/white_fab"
        app:layout_constraintBottom_toBottomOf="@+id/btn_satu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_satu"
        app:layout_constraintTop_toTopOf="@+id/btn_satu" />

</androidx.constraintlayout.widget.ConstraintLayout>