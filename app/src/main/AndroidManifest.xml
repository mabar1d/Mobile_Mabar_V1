    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_circle_hd"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_logo_circle"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mabar_V1">
        <activity
            android:name=".team.DetailTeamInfoActivity"
            android:exported="false" />
        <activity
            android:name=".team.ManageTeamActivity"
            android:exported="false" />
        <activity
            android:name=".profile.JoinTeamActivity"
