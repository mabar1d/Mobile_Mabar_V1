        <activity
            android:name=".host.HostMenuSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".team.CreateTeamActivity"
            android:exported="false" />
        <activity
            android:name=".team.TeamSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".profile.CreateTournamentActivity"
            android:exported="false" />
        <activity android:name=".main.DetailTournamentActivity" />
        <activity android:name=".main.GeneralSearchTournamentActivity" />
        <activity android:name=".profile.DetailProfileAccountActivity" />

        <activity android:name=".splash.SplashScreen1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WelcomeActivity" />
        <activity android:name=".signup.SignUpActivity" />
        <activity android:name=".login.LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:layout_alignParentBottom="true"
            android:fitsSystemWindows="true"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustNothing" />
    </application>

</manifest>